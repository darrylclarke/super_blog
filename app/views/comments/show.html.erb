<h1>Comment Details</h1>

<h3><%= @comment.made_by %></h3>
<hr>
<p><%= @comment.body %></p>
<hr>
<%= link_to "Edit", edit_comment_path( @comment ), class: "btn btn-info" %>
<%= link_to "Delete", comment_path( @comment ), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>