<h1>Posts Details</h1>

<h3><%= @post.title %></h3>
<hr>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit", edit_post_path( @post ), class: "btn btn-info" %>
<%= link_to "Delete", post_path( @post ), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>