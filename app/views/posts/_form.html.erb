<%= simple_form_for (@post || Post.new), html: {class: "form-horizontal"} do |f| %>
	<%= f.input :title, class: "form-control"%>
	<%= f.input :body, class: "form-control" %>
	<%= f.association :category, include_blank: false %> 
	<%= f.input :attachment %>
	<%= f.association :tags, as: :check_boxes %>	
	<div class = "form-group">	
	<%= f.submit "Create Post", class: "btn btn-primary", data: {disable_with: "Saving..."} %>
	</div>
<% end %>
